{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": ["-g", "-main.cpp"],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "c:/Projects/cpp/DSA/linked_list",
      "program": "c:/Projects/cpp/DSA/linked_list/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}